<UserControl x:Class="Bolnica_aplikacija.LekarTabovi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bolnica_aplikacija"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl x:Name="lekarTab" HorizontalAlignment="Left" Height="610" Margin="10,9.6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="404">
            <TabItem x:Name="tabRaspored" Header="Raspored">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tabRad" Header="Rad sa pacijentima">
                <ContentControl x:Name= "contentControl"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
