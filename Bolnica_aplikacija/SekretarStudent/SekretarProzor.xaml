                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="131*"/>
                    <ColumnDefinition Width="891*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="LabelePolja" Margin="30,-37,0,152">
                    <Label x:Name="labelaJMBG" Content="JMBG:" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="91" FontSize="20" Margin="0,10,0,0"/>
                    <Label x:Name="labelaIme" Content="IME" HorizontalAlignment="Left" Height="46" Margin="0,55,0,0" VerticalAlignment="Top" Width="91" FontSize="20"/>
