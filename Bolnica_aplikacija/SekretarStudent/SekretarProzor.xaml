                <Label.Effect>
                    <DropShadowEffect BlurRadius="21" Opacity="0.365" Color="#FFFFF0DE"/>
                </Label.Effect>
            </Label>
            <Button x:Name="zakaziTerminButton" Content="                     " HorizontalAlignment="Left" Height="80" Margin="110,320,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.325,0.75" BorderThickness="0" ToolTip="Zakaži termin" Click="zakaziTerminButton_Click" BorderBrush="#FF9C5353">
                <Button.Background>
                    <ImageBrush  Stretch="Uniform" ImageSource="zakaziTermin.png"/>
                </Button.Background>
