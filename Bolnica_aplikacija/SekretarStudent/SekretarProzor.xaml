            <Button x:Name="IzmeniTerminButton" Content="                     " HorizontalAlignment="Left" Height="80" Margin="110,420,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.325,0.75" BorderThickness="0" ToolTip="Izmeni termin" Click="IzmeniTerminButton_Click">
                <Button.Background>
                    <ImageBrush  Stretch="Uniform" ImageSource="izmeniTermin.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="OtkaziTerminButton" Content=" " HorizontalAlignment="Left" Height="80" Margin="110,520,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.325,0.75" BorderThickness="0" ToolTip="Otkaži termin" Click="OtkaziTerminButton_Click" >
                <Button.Background>
                    <ImageBrush  Stretch="Uniform" ImageSource="otkaziTermin.png"/>
                </Button.Background>
            </Button>
            <GridSplitter HorizontalAlignment="Left" Height="730" Margin="326,0,-20,0" VerticalAlignment="Top" Width="1040">
