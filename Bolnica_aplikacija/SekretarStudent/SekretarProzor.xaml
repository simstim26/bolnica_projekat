                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFCFA0FF" Offset="0"/>
                            <GradientStop Color="#FF8E4DCF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btnOdustaniOdIzborra" Content="ODUSTANI" HorizontalAlignment="Left" Margin="519,402,0,0" VerticalAlignment="Top" Width="198" Height="59" FontSize="36" Click="btnOdustaniOdIzborra_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFCFA0FF" Offset="0"/>
                            <GradientStop Color="#FF8E4DCF" Offset="1"/>
                        </LinearGradientBrush>
