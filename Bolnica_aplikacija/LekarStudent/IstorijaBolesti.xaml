<UserControl x:Class="Bolnica_aplikacija.LekarStudent.IstorijaBolesti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bolnica_aplikacija.LekarStudent"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="430">
    <Grid Background="White">
        <DataGrid x:Name="dataGridIstorijaBolesti" HorizontalAlignment="Left" IsReadOnly="True" AutoGenerateColumns="False" Height="622" Background="White" AlternatingRowBackground="#FF9900" AlternationCount="2" RowHeight="35" Margin="0,128,0,0" VerticalAlignment="Top" Width="430">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Width="200" Binding="{Binding nazivBolesti}"></DataGridTextColumn>
                <DataGridTextColumn Header="Terapija" Width="200" Binding="{Binding nazivTerapije}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnIzmeni" Content="Izmeni" HorizontalAlignment="Left" Margin="321,67,0,0" VerticalAlignment="Top" Width="86" Height="43" Click="btnIzmeni_Click"/>


    </Grid>
</UserControl>
