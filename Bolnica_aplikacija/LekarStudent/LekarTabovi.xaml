<UserControl x:Class="Bolnica_aplikacija.LekarTabovi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bolnica_aplikacija"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl x:Name="lekarTab" HorizontalAlignment="Left" Height="600" Margin="0,10,0,-160.4" VerticalAlignment="Top" Width="425">
            <TabItem x:Name="tabRaspored" Header="Raspored" Height="40" Width="210">
                <Grid Background="#FFE5E5E5" Margin="-3,-3,-1.8,-3"/>
            </TabItem>
            <TabItem x:Name="tabRad" Header="Rad sa pacijentima" Width="211">
                <ContentControl x:Name= "contentControl" Margin="-3,-2,-1.8,-2"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
